---
import { Icon } from 'astro-icon'
import { t } from 'i18next'
---

<aside class="space-y-4 lg:text-left text-center">
  <div id="basic">
    <h1 class="text-2xl font-bold">José Olórtegui</h1>
    <p>{t('basic.position')}</p>
  </div>
  <div id="contact">
    <a href="mailto:hi@olrtg.me" class="text-link">hi@olrtg.me</a>
  </div>
  <div
    id="socials"
    class="flex lg:justify-start justify-center items-center space-x-4"
  >
    <a href="https://www.linkedin.com/in/olrtg" target="_blank" rel="noreferrer"
      ><Icon pack="mdi" name="linkedin" class="h-6" />
    </a>
    <a
      href="https://github.com/olrtg"
      target="_blank"
      rel="noreferrer"
      class="text-lg"
      ><Icon pack="mdi" name="github" class="h-6" />
    </a>
    <a
      href="https://twitter.com/olrtg_"
      target="_blank"
      rel="noreferrer"
      class="text-lg"
      ><Icon pack="mdi" name="twitter" class="h-6" />
    </a>
  </div>
</aside>
