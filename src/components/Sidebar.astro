---
import { Icon } from 'astro-icon/components'
import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<aside class="space-y-4 text-center lg:text-left">
  <div id="basic">
    <h1 class="text-2xl font-bold">José Olórtegui</h1>
    <p>{t('basic.position')}</p>
  </div>
  <div id="contact">
    <a href="mailto:jolortegui98@gmail.com" class="text-link"
      >jolortegui98@gmail.com</a
    >
  </div>
  <div
    id="socials"
    class="flex items-center justify-center space-x-4 lg:justify-start"
  >
    <a href="https://www.linkedin.com/in/olrtg" target="_blank" rel="noreferrer"
      ><Icon name="mdi:linkedin" class="h-6" />
    </a>
    <a
      href="https://github.com/olrtg"
      target="_blank"
      rel="noreferrer"
      class="text-lg"
      ><Icon name="mdi:github" class="h-6" />
    </a>
    <a
      href="https://twitter.com/olrtg_"
      target="_blank"
      rel="noreferrer"
      class="text-lg"
      ><Icon name="mdi:twitter" class="h-6" />
    </a>
  </div>
</aside>
